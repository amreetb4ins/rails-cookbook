<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1> Cookbook </h1>
    <h3> Save your favourite recipes </h3>
  </div>
</div>



  <div class="container">
  <div class ="list-of-categories">
    <h3>List of Categories</h3>
    <%= link_to "New category", new_category_path, class: "btn btn-warning"%>
  </div>

  <div class="row card-row">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "category-link" do %>
        <% if category.photo.attached? %>
          <div class="category-card" style="background-image: url('<%= cl_image_path category.photo.key, width: 400, height: 300, crop: :fill %>')">
            <h2><%= category.name %></h2>
            <p><%= category.recipes.count %> recipes</p>
          </div>
        <% else %>
          <div class="category-card" style="background-image: url('<%= image_path "defaultpic.avif" %>')">
            <h2><%= category.name %></h2>
            <p><%= category.recipes.count %> recipes</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
